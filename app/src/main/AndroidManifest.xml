<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apps4kids.printlikeaproapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".PrintCharacterActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_print_character"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Splashscreen"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_splashscreen"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectUserActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_select_user"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".NewUserActivity"
            android:label="@string/title_activity_new_user"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
